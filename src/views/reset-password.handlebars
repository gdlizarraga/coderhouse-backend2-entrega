{{#contentFor "pageStyles"}}
<style>
  .reset-container { min-height: calc(100vh - 200px); display: flex; align-items: center; justify-content: center; padding: 40px 20px; }
  .reset-card { max-width: 500px; width: 100%; background: white; border-radius: 20px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1); padding: 40px; }
  .reset-icon { font-size: 80px; text-align: center; margin-bottom: 20px; color: #f5576c; }
  .reset-title { font-size: 28px; font-weight: bold; margin-bottom: 15px; text-align: center; }
  .reset-subtitle { font-size: 14px; color: #666; text-align: center; margin-bottom: 30px; }
  .form-group { margin-bottom: 20px; }
  .form-label { font-weight: 600; margin-bottom: 8px; display: block; }
  .form-control { border-radius: 10px; padding: 12px 15px; border: 2px solid #e0e0e0; }
  .form-control:focus { border-color: #f5576c; box-shadow: 0 0 0 0.2rem rgba(245, 87, 108, 0.25); }
  .btn-primary { width: 100%; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border: none; padding: 12px; border-radius: 50px; font-weight: bold; margin-top: 20px; }
  .btn-primary:hover { transform: scale(1.02); box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4); }
  .password-requirements { font-size: 12px; color: #666; margin-top: 5px; }
  .alert { border-radius: 10px; margin-bottom: 20px; }
  .back-link { text-align: center; margin-top: 20px; }
  .back-link a { color: #667eea; text-decoration: none; font-weight: 500; }
  .back-link a:hover { text-decoration: underline; }
</style>
{{/contentFor}}

<div class="reset-container">
  <div class="reset-card">
    <div class="reset-icon">üîê</div>
    <h2 class="reset-title">Restablecer Contrase√±a</h2>
    <p class="reset-subtitle">Ingresa tu nueva contrase√±a</p>
    <div id="alert-container"></div>
    <form id="resetPasswordForm" onsubmit="return false;">
      <div class="form-group">
        <label for="newPassword" class="form-label">Nueva Contrase√±a</label>
        <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" placeholder="M√≠nimo 6 caracteres" />
        <div class="password-requirements">La contrase√±a debe tener al menos 6 caracteres</div>
      </div>
      <div class="form-group">
        <label for="confirmPassword" class="form-label">Confirmar Contrase√±a</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" placeholder="Confirma tu contrase√±a" />
      </div>
      <button type="submit" class="btn btn-primary" id="submitBtn">Restablecer Contrase√±a</button>
    </form>
    <div class="back-link"><a href="/login">‚Üê Volver al inicio de sesi√≥n</a></div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var urlParams = new URLSearchParams(window.location.search);
  var token = urlParams.get('token');

  if (!token) {
    showAlert('Token de restablecimiento no proporcionado', 'danger');
    document.getElementById('resetPasswordForm').style.display = 'none';
  }

  var form = document.getElementById('resetPasswordForm');
  form.onsubmit = async function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    var newPassword = document.getElementById('newPassword').value;
    var confirmPassword = document.getElementById('confirmPassword').value;
    
    if (newPassword !== confirmPassword) {
      showAlert('Las contrase√±as no coinciden', 'danger');
      return false;
    }
    
    if (newPassword.length < 6) {
      showAlert('La contrase√±a debe tener al menos 6 caracteres', 'danger');
      return false;
    }
    
    var submitBtn = document.getElementById('submitBtn');
    var originalText = submitBtn.textContent;
    
    submitBtn.disabled = true;
    submitBtn.textContent = 'Restableciendo...';
    
    try {
      var response = await fetch('/api/sessions/reset-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ token: token, newPassword: newPassword })
      });
      
      var data = await response.json();
      
      if (response.ok && data.success) {
        showAlert('Contrase√±a restablecida exitosamente. Redirigiendo al login...', 'success');
        setTimeout(function() {
          window.location.href = '/login';
        }, 2000);
      } else {
        showAlert(data.message || 'Error al restablecer la contrase√±a', 'danger');
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    } catch (error) {
      console.error('Error:', error);
      showAlert('Error de conexi√≥n. Por favor intenta nuevamente.', 'danger');
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
    
    return false;
  };
  
  function showAlert(message, type) {
    document.getElementById('alert-container').innerHTML = 
      '<div class="alert alert-' + type + '" role="alert">' + message + '</div>';
  }
  window.showAlert = showAlert;
});
</script>