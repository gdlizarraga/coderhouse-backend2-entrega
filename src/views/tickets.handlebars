<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
      <i class="bi bi-receipt me-2"></i>
      Mis Compras
    </h2>
  </div>

  <!-- Loading state -->
  <div id="ticketsLoading" class="text-center py-5">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Cargando...</span>
    </div>
    <p class="mt-2">Cargando compras...</p>
  </div>

  <!-- Empty state -->
  <div id="ticketsEmpty" class="text-center py-5 d-none">
    <i class="bi bi-inbox display-1 text-muted"></i>
    <h3 class="mt-3">No tienes compras registradas</h3>
    <p class="text-muted">Tus compras aparecerán aquí</p>
    <a href="/" class="btn btn-primary mt-3">
      <i class="bi bi-cart me-2"></i>
      Ir a comprar
    </a>
  </div>

  <!-- Tickets list -->
  <div id="ticketsContent" class="d-none">
    <div class="row" id="ticketsList"></div>
  </div>
</div>

{{#contentFor "pageScripts"}}
  <script src="/js/tickets.js"></script>
{{/contentFor}}